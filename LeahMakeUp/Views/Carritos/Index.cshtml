 <script>
     document.addEventListener('DOMContentLoaded', () => {
         const counters = document.querySelectorAll('.counter');
         const precioFinalElem = document.getElementById('precio-final');
         const payButton = document.getElementById('payButton');
         const paymentForm = document.getElementById('paymentForm');

         const updateFinalPrice = () => {
             let totalPrice = 0;
             document.querySelectorAll('.precio-total').forEach(elem => {
                 totalPrice += parseFloat(elem.textContent) || 0;
             });
             precioFinalElem.textContent = totalPrice.toFixed(2);
         };

         counters.forEach(counter => {
             const decrementBtn = counter.querySelector('.decrement');
             const incrementBtn = counter.querySelector('.increment');
             const countDisplay = counter.querySelector('.count');
             const cantidadInput = counter.nextElementSibling;
             const precioUnitarioElem = counter.parentElement.nextElementSibling.querySelector('.precio-unitario');
             const precioTotalElem = counter.parentElement.nextElementSibling.nextElementSibling.querySelector('.precio-total');

             let count = parseInt(countDisplay.textContent);
             const precioUnitario = parseFloat(precioUnitarioElem.dataset.precio);
             const carritoId = cantidadInput.dataset.id;

             const updateTotal = () => {
                 const newTotal = count * precioUnitario;
                 precioTotalElem.textContent = newTotal.toFixed(2);
                 updateFinalPrice(); // Actualizar el precio final
             };

             const updateQuantityOnServer = (newCount) => {
                 $.ajax({
                     url: '@Url.Action("UpdateQuantity", "Carritos")',
                     type: 'POST',
                     data: {
                         id: carritoId,
                         nuevaCantidad: newCount
                     },
                     success: function (response) {
                         console.log('Cantidad actualizada en el servidor');
                     },
                     error: function (error) {
                         console.error('Error al actualizar la cantidad en el servidor');
                     }
                 });
             };

             decrementBtn.addEventListener('click', () => {
                 if (count > 1) {
                     count--;
                     countDisplay.textContent = count;
                     cantidadInput.value = count;
                     updateTotal();
                     updateQuantityOnServer(count);
                 }
             });

             incrementBtn.addEventListener('click', () => {
                 count++;
                 countDisplay.textContent = count;
                 cantidadInput.value = count;
                 updateTotal();
                 updateQuantityOnServer(count);
             });
         });

         // Inicializar el precio final al cargar la página
         updateFinalPrice();

         // Validar si hay productos en el carrito antes de enviar el formulario
         paymentForm.addEventListener('submit', (event) => {
             const totalProducts = document.querySelectorAll('.precio-total').length;
             if (totalProducts === 0) {
                 event.preventDefault(); // Evitar el envío del formulario
                 alert('No puedes realizar el pago porque no hay productos en el carrito.');
             }
         });
     });
 </script>

