    <script src="~/js/index.js"></script>

    <link href="~/css/chat.css" rel="stylesheet">
    <link href="~/img" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark" href="">Preguntas Frecuentes</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark px-2" href="https://wa.me/71397781?text=Buenas%2C%20estoy%20interesada%20en%20un%20producto%21">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a class="text-dark px-2" href="https://www.instagram.com/leah_makeup_and_accesories/">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center py-3">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">L</span>Leah Make Up</h1>
                </a>
            </div>
            <!-- BUSCAR -->
            <div class="col-lg-6 col-md-6 col-sm-12 text-left">
                <form id="searchForm">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Buscar productos">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 text-right">
                <a asp-controller="Home" asp-action="Index" class="btn border">
                    <i class="fas fa-home text-primary"></i>
                    <span class="badge">0</span>
                </a>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Main Content Start -->
    <div class="container">
        @model IEnumerable<DAL.Carrito>

        @{
            ViewData["Title"] = "Index";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subtotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecioTotal)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Inventario.FotoProducto != null)
                            {
                                var imageBase64 = Convert.ToBase64String(item.Inventario.FotoProducto);
                                var imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                                <img src="@imageSrc" alt="Producto" width="50" height="50" />
                            }
                        </td>
                        <td>
                            <div class="counter">
                                <button type="button" class="decrement">-</button>
                                <span class="count" id="count-@item.CarritoId">@item.Cantidad</span>
                                <button type="button" class="increment">+</button>
                            </div>
                            <input type="hidden" class="cantidad-input" value="@item.Cantidad" data-id="@item.CarritoId" />
                        </td>
                        <td>
                            <span class="precio-unitario" data-precio="@item.Inventario.PrecioXVenta">@item.Inventario.PrecioXVenta</span>
                        </td>
                        <td>
                            <span class="precio-total" id="precio-total-@item.CarritoId">@item.PrecioTotal</span>
                        </td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.CarritoId" />
                                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Botón para eliminar todos los productos del carrito -->
        <form asp-action="ClearCart" method="post">
            <button type="submit" class="btn btn-danger">Eliminar todos los productos</button>
        </form>

    </div>
    <!-- Main Content End -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const counters = document.querySelectorAll('.counter');

            counters.forEach(counter => {
                const decrementBtn = counter.querySelector('.decrement');
                const incrementBtn = counter.querySelector('.increment');
                const countDisplay = counter.querySelector('.count');
                const cantidadInput = counter.nextElementSibling;
                const precioUnitarioElem = counter.parentElement.nextElementSibling.querySelector('.precio-unitario');
                const precioTotalElem = counter.parentElement.nextElementSibling.nextElementSibling.querySelector('.precio-total');

                let count = parseInt(countDisplay.textContent); // Obtener el valor inicial de la cantidad
                const precioUnitario = parseFloat(precioUnitarioElem.dataset.precio); // Obtener el precio unitario
                const carritoId = cantidadInput.dataset.id; // Obtener el ID del carrito

                const updateTotal = () => {
                    const newTotal = count * precioUnitario;
                    precioTotalElem.textContent = newTotal.toFixed(2); // Actualizar el total
                };

                const updateQuantityOnServer = (newCount) => {
                    $.ajax({
                        url: '@Url.Action("UpdateQuantity", "Carritos")',
                        type: 'POST',
                        data: {
                            id: carritoId,
                            nuevaCantidad: newCount
                        },
                        success: function (response) {
                            console.log('Cantidad actualizada en el servidor');
                        },
                        error: function (error) {
                            console.error('Error al actualizar la cantidad en el servidor');
                        }
                    });
                };

                decrementBtn.addEventListener('click', () => {
                    if (count > 1) { // Prevenir que la cantidad sea menor que 1
                        count--;
                        countDisplay.textContent = count;
                        cantidadInput.value = count; // Actualizar el campo oculto
                        updateTotal();
                        updateQuantityOnServer(count); // Actualizar en el servidor
                    }
                });

                incrementBtn.addEventListener('click', () => {
                    count++;
                    countDisplay.textContent = count;
                    cantidadInput.value = count; // Actualizar el campo oculto
                    updateTotal();
                    updateQuantityOnServer(count); // Actualizar en el servidor
                });
            });
        });
    </script>
</body>

</html>
