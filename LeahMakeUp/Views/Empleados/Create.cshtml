@model EmpleadoCreateViewModel

@{
    ViewData["Title"] = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Empleados - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #ddd;
            max-width: 95%;
            margin: auto;
        }

            .navbar h1 {
                margin: 0;
            }

            .navbar a {
                text-decoration: none;
                color: #ffb6c1;
                font-weight: 500;
                font-size: 1.5em;
            }

                .navbar a:hover {
                    text-decoration: none;
                }

            .navbar .home-icon {
                font-size: 1.5em;
            }

        .container {
            max-width: 95%;
            margin: 30px auto 15px;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow-x: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .btn-light {
            background-color: #ffb6c1;
            border: none;
            color: #fff;
            font-weight: 500;
            padding: 10px 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 1em;
        }

            table thead tr {
                background-color: #f2f2f2;
                text-align: left;
                font-weight: bold;
            }

            table th, table td {
                padding: 12px 15px;
                white-space: nowrap;
                text-align: center;
            }

            table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                table tbody tr:last-of-type {
                    border-bottom: 2px solid #ffb6c1;
                }

                table tbody tr.active-row {
                    font-weight: bold;
                    color: #009879;
                }

        .btn {
            font-size: 0.875em;
        }

        .btn-primary {
            background-color: #ffb6c1;
            border: none;
            margin-right: 10px;
        }

        .btn-danger {
            background-color: #ff6961;
            border: none;
        }

        .btn-primary, .btn-danger {
            padding: 0.5em 1em;
            font-size: 0.875em;
        }

        .btn-group .btn {
            margin-right: 10px;
        }

    </style>
</head>

<body>
    <div class="navbar">
        <h1>
            <span class="text-primary font-weight-bold border px-3 mr-1">L</span>Leah Make Up
        </h1>
        <a href="@Url.Action("Index", "Home")" class="home-icon">
            <i class="fas fa-home"></i>
        </a>
    </div>

    <h1>@ViewData["Title"]</h1>

    <div class="container">
        <!-- Abre el formulario aquí -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <!-- Información Personal -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            Información Personal
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Cedula" class="control-label font-weight-bold"></label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label font-weight-bold"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrimerApellido" class="control-label font-weight-bold"></label>
                                <input asp-for="PrimerApellido" class="form-control" />
                                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SegundoApellido" class="control-label font-weight-bold"></label>
                                <input asp-for="SegundoApellido" class="form-control" />
                                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sexo" class="control-label font-weight-bold"></label>
                                <select asp-for="Sexo" class="form-control" asp-items="ViewBag.SexoOptions"></select>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaNacimiento" class="control-label font-weight-bold"></label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label font-weight-bold"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telefono" class="control-label font-weight-bold"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Direccion" class="control-label font-weight-bold"></label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información Laboral -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            Información Laboral
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="FechaContratacion" class="control-label font-weight-bold"></label>
                                <input asp-for="FechaContratacion" class="form-control" type="date" />
                                <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PuestoId" class="control-label font-weight-bold"></label>
                                <select asp-for="PuestoId" class="form-control" asp-items="ViewBag.PuestoId"></select>
                                <span asp-validation-for="PuestoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Departamento" class="control-label font-weight-bold"></label>
                                <select asp-for="Departamento" class="form-control" asp-items="ViewBag.Departamento"></select>
                                <span asp-validation-for="Departamento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SucursalId" class="control-label font-weight-bold"></label>
                                <select asp-for="SucursalId" class="form-control" asp-items="ViewBag.SucursalId"></select>
                                <span asp-validation-for="SucursalId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Vacaciones" class="control-label font-weight-bold"></label>
                                <input asp-for="Vacaciones" class="form-control" readonly />
                                <span asp-validation-for="Vacaciones" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ID_Estado" class="control-label font-weight-bold"></label>
                                <select asp-for="ID_Estado" class="form-control" asp-items="ViewBag.ID_Estado"></select>
                                <span asp-validation-for="ID_Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Atrás</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
