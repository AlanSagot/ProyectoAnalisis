@model DAL.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Empleados - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #ddd;
            max-width: 95%;
            margin: auto;
        }

            .navbar h1 {
                margin: 0;
            }

            .navbar a {
                text-decoration: none;
                color: #ffb6c1;
                font-weight: 500;
                font-size: 1.5em;
            }

                .navbar a:hover {
                    text-decoration: none;
                }

            .navbar .home-icon {
                font-size: 1.5em;
            }

        .container {
            max-width: 95%;
            margin: 30px auto 15px;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow-x: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .btn-light {
            background-color: #ffb6c1;
            border: none;
            color: #fff;
            font-weight: 500;
            padding: 10px 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 1em;
        }

            table thead tr {
                background-color: #f2f2f2;
                text-align: left;
                font-weight: bold;
            }

            table th, table td {
                padding: 12px 15px;
                white-space: nowrap;
                text-align: center;
            }

            table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                table tbody tr:last-of-type {
                    border-bottom: 2px solid #ffb6c1;
                }

                table tbody tr.active-row {
                    font-weight: bold;
                    color: #009879;
                }

        .btn {
            font-size: 0.875em;
        }

        .btn-primary {
            background-color: #ffb6c1;
            border: none;
            margin-right: 10px;
        }

        .btn-danger {
            background-color: #ff6961;
            border: none;
        }

        .btn-primary, .btn-danger {
            padding: 0.5em 1em;
            font-size: 0.875em;
        }

        .btn-group .btn {
            margin-right: 10px;
        }

    </style>
</head>

<body>
    <div class="navbar">
        <h1>
            <span class="text-primary font-weight-bold border px-3 mr-1">L</span>Leah Make Up
        </h1>
        <a href="@Url.Action("Index", "Home")" class="home-icon">
            <i class="fas fa-home"></i>
        </a>
    </div>

    <h1>@ViewData["Title"]</h1>

    <div class="container">
        <div class="row">
            <!-- Información Personal -->
            <div class="col-md-6">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action active bg-primary text-white">
                        <h5 class="mb-0">Información Personal</h5>
                    </a>
                    <div class="list-group-item">
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Cedula)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Cedula)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.PrimerApellido)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.PrimerApellido)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.SegundoApellido)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.SegundoApellido)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Sexo)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Sexo)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.FechaNacimiento)
                            </dt>
                            <dd class="col-sm-8">
                                @Model.FechaNacimiento.ToString("d")
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Edad)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Edad)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Telefono)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Telefono)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Direccion)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Direccion)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Información Laboral -->
            <div class="col-md-6">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action active bg-primary text-white">
                        <h5 class="mb-0">Información Laboral</h5>
                    </a>
                    <div class="list-group-item">
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.FechaContratacion)
                            </dt>
                            <dd class="col-sm-8">
                                @Model.FechaContratacion.ToString("d")
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Puesto.NombrePuesto)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Puesto.NombrePuesto)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Sucursal.Direccion)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Sucursal.Direccion)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Estado.Tipo)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Estado.Tipo)
                            </dd>
                        </dl>
                        <dl class="row border-bottom">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Vacaciones)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Vacaciones)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <div class="mt-3">
            <a class="btn btn-primary" asp-action="Index">Atrás</a>
            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.EmpleadoId">
                <i class="fa fa-pen"></i>
            </a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.EmpleadoId">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </div>
</body>
</html>
