@model DAL.Empleado

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Eliminar Empleado</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #ddd;
        }

            .navbar h1 {
                margin: 0;
            }

            .navbar a {
                text-decoration: none;
                color: #ffb6c1;
                font-weight: 500;
                font-size: 1.5em;
            }

                .navbar a:hover {
                    text-decoration: none;
                }

            .navbar .home-icon {
                font-size: 1.5em;
            }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            font-weight: 500;
            color: #333;
        }

        h3 {
            margin-bottom: 20px;
            font-weight: 400;
            color: #555;
        }

        .form-group {
            margin: 0;
        }

            .form-group dl {
                display: grid;
                grid-template-columns: 1fr 2fr;
                gap: 10px;
                margin: 0;
                text-align: left;
                justify-content: center;
            }

            .form-group dt {
                font-weight: bold;
                color: #333;
                padding-right: 10px;
            }

            .form-group dd {
                color: #666;
            }

        .btn-light {
            background-color: #ffb6c1;
            border: none;
            color: #fff;
            font-weight: 500;
            padding: 10px 20px;
            margin: 10px;
        }

            .btn-light:hover {
                background-color: #ff9eae;
            }

        .btn-danger {
            background-color: #ff6961;
            border: none;
            color: #fff;
            font-weight: 500;
            padding: 10px 20px;
            margin: 10px;
        }

            .btn-danger:hover {
                background-color: #ff5c54;
            }

        .btn-group .btn {
            margin: 10px;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <h1>
            <span class="text-primary font-weight-bold border px-3 mr-1">L</span>Leah Make Up
        </h1>
        <a href="@Url.Action("Index", "Home")" class="home-icon">
            <i class="fas fa-home"></i>
        </a>
    </div>

    <div class="container">
        <h2>Eliminar Empleado</h2>

        <h3>¿Estás seguro de que quieres eliminar este registro?</h3>

        <div>
            <h4>Empleado</h4>
            <hr />
            <div class="form-group">
                <dl>
                    <dt>Nombre:</dt>
                    <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt>Primer Apellido:</dt>
                    <dd>@Html.DisplayFor(model => model.PrimerApellido)</dd>

                    <dt>Segundo Apellido:</dt>
                    <dd>@Html.DisplayFor(model => model.SegundoApellido)</dd>

                    <dt>Cédula:</dt>
                    <dd>@Html.DisplayFor(model => model.EmpleadoId)</dd>

                    <dt>Email:</dt>
                    <dd>@Html.DisplayFor(model => model.Email)</dd>

                    <dt>Teléfono:</dt>
                    <dd>@Html.DisplayFor(model => model.Telefono)</dd>

                    <dt>Dirección:</dt>
                    <dd>@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt>Fecha de Contratación:</dt>
                    <dd>@Model.FechaContratacion.ToString("dd/MM/yyyy")</dd>

                    <dt>Estado:</dt>
                    <dd>@Html.DisplayFor(model => model.Estado.Tipo)</dd>

                    <dt>Puesto:</dt>
                    <dd>@Html.DisplayFor(model => model.Puesto.Departamento)</dd>

                    <dt>Sucursal:</dt>
                    <dd>@Html.DisplayFor(model => model.Sucursal.Direccion)</dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post" style="text-align: center;">
                <input type="hidden" asp-for="EmpleadoId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a class="btn btn-light" asp-action="Details" asp-route-id="@Model.EmpleadoId">Atrás</a>
            </form>
        </div>
    </div>
</body>

</html>
