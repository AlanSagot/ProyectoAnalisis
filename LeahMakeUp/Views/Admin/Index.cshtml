@model IEnumerable<DAL.ApplicationUser>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Lista de Usuarios" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #ddd;
            max-width: 95%;
            margin: auto;
        }

            .navbar h1 {
                margin: 0;
            }

            .navbar a {
                text-decoration: none;
                color: #ffb6c1;
                font-weight: 500;
                font-size: 1.5em;
            }

                .navbar a:hover {
                    text-decoration: none;
                }

            .navbar .home-icon {
                font-size: 1.5em;
            }

        .container {
            max-width: 95%;
            margin: 30px auto 15px;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow-x: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .btn-light {
            background-color: #ffb6c1;
            border: none;
            color: #fff;
            font-weight: 500;
            padding: 10px 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 1em;
        }

            table thead tr {
                background-color: #f2f2f2;
                text-align: left;
                font-weight: bold;
            }

            table th, table td {
                padding: 12px 15px;
                white-space: nowrap;
                text-align: center;
            }

            table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                table tbody tr:last-of-type {
                    border-bottom: 2px solid #ffb6c1;
                }

                table tbody tr.active-row {
                    font-weight: bold;
                    color: #009879;
                }

        .btn {
            font-size: 0.875em;
        }

        .btn-primary {
            background-color: #ffb6c1;
            border: none;
            margin-right: 10px;
        }

        .btn-danger {
            background-color: #ff6961;
            border: none;
        }

        .btn-primary, .btn-danger {
            padding: 0.5em 1em;
            font-size: 0.875em;
        }

        .btn-group .btn {
            margin-right: 10px;
        }

    </style>
</head>
<body>
    <div class="navbar">
        <h1>
            <span class="text-primary font-weight-bold border px-3 mr-1">L</span>Leah Make Up
        </h1>
        <a href="@Url.Action("Index", "Home")" class="home-icon">
            <i class="fas fa-home"></i>
        </a>
    </div>
    <div class="container">
        <h2>Lista de Usuarios</h2>
        <p>
            <a class="btn btn-light" href="@Url.Action("CrearUsuario", "Admin")">Crear Usuario</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Cédula</th>
                    <th>Estado</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Email</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.PrimerApellido</td>
                        <td>@usuario.SegundoApellido</td>
                        <td>@usuario.Cedula</td>
                        <td>@(usuario.Estado == "Activo" ? "Activo" : "Inactivo")</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.Direccion</td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("EditarUsuario", "Admin", new { id = usuario.Id })" class="btn btn-primary">Editar</a>
                                <a href="@Url.Action("EliminarUsuario", "Admin", new { id = usuario.Id })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
