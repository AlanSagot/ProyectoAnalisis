@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" class="form-control" placeholder="Please enter your phone number." disabled />
                <label asp-for="Input.Nombre" class="form-label"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PrimerApellido" class="form-control" placeholder="Please enter your phone number." disabled />
                <label asp-for="Input.PrimerApellido" class="form-label"></label>
                <span asp-validation-for="Input.PrimerApellido" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.SegundoApellido" class="form-control" placeholder="Please enter your phone number." disabled />
                <label asp-for="Input.SegundoApellido" class="form-label"></label>
                <span asp-validation-for="Input.SegundoApellido" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Cedula" class="form-control" placeholder="Please enter your phone number." disabled />
                <label asp-for="Input.Cedula" class="form-label"></label>
                <span asp-validation-for="Input.Cedula" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Telefono" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.Telefono" class="form-label"></label>
                <span asp-validation-for="Input.Telefono" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Direccion" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.Direccion" class="form-label"></label>
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CodigoPostal" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.CodigoPostal" class="form-label"></label>
                <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
